<!-- 11 index route  -->
<% layout ("/layouts/boilerplate") %>

 <body>
  
    <!-- <form method="GET"action="/listings/new">
        <button>Create New Listing</button>
    </form> -->


    <!-- icons -->
    <div style="min-height: 120px;">

    <div id="filters">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-city"></i>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      <div class="filter hidden-icon">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </div>
      <div class="filter hidden-icon">
        <i class="fa-solid fa-person-swimming"></i>
        <p> Swim Pools</p>
        </div>
      <div class="filter hidden-icon">
        <i class="fa-solid fa-burger"></i>
        <p>Chef burger</p>
      </div>
      <div class="filter hidden-icon">
        <i class="fa-solid fa-person-skiing"></i>
        <p>Skiing</p>
      </div>
      <div class="filter hidden-icon">
        <i class="fa-regular fa-snowflake"></i>
        <p>Snow</p>
      </div>
     
    <!-- tax toggle display tax -->
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
  

    
<div class="row custom-row-cols g-4">
<!-- for listings -->
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card listing-card h-100 shadow-sm border-0 animate-fade-in hover-scale">
          <!-- ❤️ Wishlist Icon -->
  <div class="position-absolute top-0 end-0 p-2 z-3">
  <i class="bi bi-heart wishlist-icon-hover"></i>
</div>
       

          <!-- 🖼️ Image -->
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top rounded-4" 
            alt="listing image" 
            style="height: 12.5rem; object-fit: cover;" 
          />

          <!-- 📦 Card Body -->
          <div class="card-body p-2">
            <p class="mb-1 fw-semibold"><%= listing.title %></p>
            <p class="text-muted small mb-1">
              ₹ <%= listing.price.toLocaleString("en-IN") %> /night
              <i class="text-muted tax-info">+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>




<script>
  document.addEventListener("DOMContentLoaded", () => {
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");

    taxSwitch.addEventListener("change", () => {
      const taxInfos = document.getElementsByClassName("tax-info");

      for (let info of taxInfos) {
 info.classList.toggle("show-tax", taxSwitch.checked);
      }
    });
  });
</script>





 </body>
 </html>