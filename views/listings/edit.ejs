<!-- 15.1 edit form -->
<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <br>

    <h2>Edit this listing</h2>
   <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"> 
   
    <div>
        <label for="title" class="form-label">Title</label>
    <input name="listing[title]" type="text" class="form-control" value="<%=listing.title%>" required><br>
    <div class="valid-feedback"> Title looks good!</div>
</div>
<div>
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" class="form-control"  required type="text"><%=listing.description%> </textarea><br>
    <div class="invalid-feedback">Please enter a short description</div>
</div>
<div class="mb-3">
    Original Listing Image <br>
    <img src="<%= originalImageUrl %>" alt="Listing Image" />
  </div>
  
<div>
    <label for="image" class="form-label"> Upload new Image</label>
    <input name="listing[image]" class="form-control" type="file" > <br>
    <div class="invalid-feedback">Please enter a valid image</div>
</div>

<div class="row">
<div class="mb-3 col-md-4">
    <label for="price" class="form-label">Price</label>
    <input name="listing[price]" class="form-control"   required value="<%=listing.price%>"><br>
    <div class="invalid-feedback">Please enter a valid price</div>
</div>

<div class="col-md-8">
    <label for="country" class="form-label">Country</label>
    <input name="listing[country]" class="form-control" type="text"  required value="<%=listing.country%>"><br>
    <div class="invalid-feedback">Please enter a valid country</div>
</div>
</div> 
<div>
    <label for="location" class="form-label">Location</label>
    <input name="listing[location]" class="form-control" type="text"  required value="<%=listing.location%>"><br>
    <div class="invalid-feedback">Please enter a valid location</div>
</div>
    <button class=" btn btn-dark edit-btn">Edit</button><br><br>
   </form>
   </div>
   </div>
</body>
</html>
