<% layout("/layouts/boilerplate")%>
<!-- 23.2 SIGNUP FORM EJS -->

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on Wanderlust</h2><BR></BR>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text"  class="form-control" required><br>
                <div class="valid-feedback"> looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email"  class="form-control"><br>
        
            </div>
       
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password"  class="form-control" required><br>
            
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
        </div>
    </div>