  }
  .search-inp{
    border-radius: 23px;
  }

</style>
<!-- Navbar -->
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top px-3">
<div class="container-fluid d-flex justify-content-between align-items-center">
  <!-- Left: Navbar Brand -->
  <a class="navbar-brand me-auto " href="/"><i class="fa-regular fa-compass"></i></a>

  <!-- Center: Search Bar -->
  <div class="d-none d-md-flex mx-auto align-items-center gap-2">
    <input class="form-control search-inp" type="search" placeholder="Search destinations" />
    <button class="btn btn-search"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
  </div>

  <!-- Right: Toggle & Nav Items -->
  <div class="d-flex">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</div>


  <div class="collapse navbar-collapse justify-content" id="navbarNavDropdown">
    <ul class="navbar-nav ms-auto">
      <li class="nav-item">
        <a class="nav-link" href="/listings">Explore</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
      </li>
      <% if(!currUser){ %>
        <li class="nav-item"><a class="nav-link" href="/signup"><b>Signup</b></a></li>
        <li class="nav-item"><a class="nav-link" href="/login"><b>Login</b></a></li>
      <% } else { %>
        <li class="nav-item"><a class="nav-link" href="/logout"><b>Logout</b></a></li>
      <% } %>
    </ul>
  </div>
</div>

</nav>


<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggler = document.querySelector(".navbar-toggler");
  const collapseTarget = document.getElementById("navbarNavDropdown");
  const elementsToHide = document.querySelectorAll(".navbar-brand, .navbar-toggler");

  collapseTarget.addEventListener("show.bs.collapse", () => {
    elementsToHide.forEach(el => el.classList.add("d-none"));
  });

  collapseTarget.addEventListener("hide.bs.collapse", () => {
    elementsToHide.forEach(el => el.classList.remove("d-none"));
  });
});

</script>




