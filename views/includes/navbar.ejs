<style>
  .btn-search {
    background-color: #fe424d;
    color: rgb(233, 235, 236);
    border-radius: 23px;
    padding: 0 1rem;
    height: 2.2rem;
    width: 11rem;
  }

  .btn-search:hover {
    background-color: #e41f2c;
    color: rgb(207, 214, 217);
  }
  .navbar-brand{
    font-size:1.1rem;
   
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 23px;
  }

  .nav-icon {
    font-size: 1.3rem;
    margin-right: 0.5rem;
  }

  .navbar {
    padding: 0.5rem 1rem;
  }

  .search-bar-wrapper {
    max-width: 450px;
    width: 100%;
  }

  /* Hide only search bar on small screens */
  @media (max-width: 768px) {
    .search-bar-wrapper {
      display: none !important;
    }
  }

  .nav-explore-text {
    display: inline-block;
    color:#636363
    
  }

  @media (max-width: 768px) {
    .nav-explore-text {
      display: none !important;
    }
  }

  .navbar-nav .nav-link {
    white-space: nowrap;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top px-3">
  <div class="container-fluid d-flex align-items-center justify-content-between w-100 flex-nowrap">

    <!-- LEFT: Explore Compass Icon -->
    <a class="navbar-brand d-flex align-items-center gap-1 me-2" href="/listings" title="Explore">
      <i class="fa-regular fa-compass nav-icon"></i>
      <span class="nav-explore-text">Explore</span>
    </a>

    <!-- CENTER: Search Bar (Visible only on md and up) -->
    <div class="d-none d-md-flex justify-content-center align-items-center flex-grow-1 search-bar-wrapper mx-2">
      <input class="form-control search-inp me-2" type="search" placeholder="Search destinations" />
      <button class="btn btn-search">
        <i class="fa-solid fa-magnifying-glass"></i> Search
      </button>
    </div>

    <!-- RIGHT: Nav items and toggler -->
    <div class="d-flex align-items-center gap-2">

      <!-- Toggler for mobile menu -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Nav Links -->
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav align-items-center ms-auto gap-2">
          <li class="nav-item">
            <a class="nav-link" href="/listings/new">Airbnb your home</a>
          </li>
          <% if (!currUser) { %>
            <li class="nav-item"><a class="nav-link" href="/signup"><b>Signup</b></a></li>
            <li class="nav-item"><a class="nav-link" href="/login"><b>Login</b></a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/logout"><b>Logout</b></a></li>
          <% } %>
        </ul>
      </div>

    </div>
  </div>
</nav>



<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggler = document.querySelector(".navbar-toggler");
  const collapseTarget = document.getElementById("navbarNavDropdown");
  const elementsToHide = document.querySelectorAll(".navbar-toggler");

  collapseTarget.addEventListener("show.bs.collapse", () => {
    elementsToHide.forEach(el => el.classList.add("d-none"));
  });

  collapseTarget.addEventListener("hide.bs.collapse", () => {
    elementsToHide.forEach(el => el.classList.remove("d-none"));
  });
});

</script>




